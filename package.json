{
  "name": "skedify-uri-encoding",
  "version": "0.0.0-development",
  "description": "Encoding of JSON object",
  "main": "lib/skedify-uri-encoding.js",
  "scripts": {
    "prebuild": "eslint --cache src/**/*.js && rimraf lib",
    "lint": "eslint --cache src/**/*.js test/**/*.js",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "test": "NODE_ENV=test jest",
    "tdd": "npm run test -- --watch",
    "check-coverage": "CI=true NODE_ENV=test jest --collectCoverageFrom=\"src/**/*.js\" --coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git-cz",
    "precommit": "npm run lint",
    "commitmsg": "node_modules/.bin/validate-commit-msg",
    "prepush": "npm test && npm run check-coverage",
    "postmerge": "npm install",
    "postrewrite": "npm install"
  },
  "homepage": "https://github.com/skedify/skedify-uri-encoding",
  "author": {
    "name": "Skedify",
    "email": "info@skedify.co",
    "url": "http://skedify.co"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/skedify/skedify-uri-encoding.git"
  },
  "bugs": {
    "url": "https://github.com/skedify/skedify-uri-encoding/issues"
  },
  "keywords": [
    "skedify",
    "uri-encoding"
  ],
  "files": [
    "lib"
  ],
  "license": "MIT",
  "dependencies": {
    "json-stable-stringify": "^1.0.1"
  },
  "devDependencies": {
    "atob": "^2.0.3",
    "babel": "^6.23.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "btoa": "^1.1.2",
    "commitizen": "^2.9.6",
    "cross-env": "^4.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-better": "^0.1.5",
    "eslint-plugin-filenames": "^1.2.0",
    "eslint-plugin-require-in-package": "^1.0.3",
    "husky": "^0.13.3",
    "jest": "^20.0.0",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^3.2.2",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^2.12.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "subjectPattern": "[a-z].+",
      "subjectPatternErrorMsg": "Subject is invalid",
      "helpMessage": "Use `npm run commit`. The subject should complete the following sentence: 'When applied, this commit will ...''"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
